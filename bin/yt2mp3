#!/usr/bin/env bash
# Extracts mp3 from given youtube video id.
BASEURL="https://www.youtube.com"

show_help() {
    cat >&2 << EOM
USAGE:   $(basename $0) VIDEO-ID
EOM
}

if [ $# -eq 0 -o "$1" == "-h" ]; then
    show_help
    exit 2
fi

youtube-dl \
    --extract-audio \
    --audio-format mp3 \
    --audio-quality 5 \
    --format 'bestaudio[ext=m4a]/best[ext=mp4]/best' \
    -o '~/media/music/youtube/%(title)s-%(id)s.%(ext)s' \
    "${BASEURL}/watch?v=$1"
