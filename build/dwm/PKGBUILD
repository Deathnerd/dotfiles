pkgname=dwm-git
_pkgname=dwm
pkgver=6.1.16.g3e97735
pkgrel=1
pkgdesc="A dynamic window manager for X"
url="http://dwm.suckless.org"
arch=('i686' 'x86_64')
license=('MIT')
depends=('libx11' 'libxinerama')
makedepends=('git')
provides=('dwm')
conflicts=('dwm')
epoch=1
source=("$_pkgname::git://github.com/fanglingsu/dwm.git#branch=patched")
sha1sums=('SKIP')

pkgver(){
  cd $_pkgname
  git describe --tags |sed 's/-/./g'
}

prepare() {
  if [ -e $startdir/config.h ]; then
    msg "Use custom config.h file"
    cp "$startdir/config.h" "$srcdir/$_pkgname/config.h"
  fi
}

build() {
  cd "$srcdir"/$_gitname/$_pkgname

  sed -i config.mk -e 's/CPPFLAGS =/CPPFLAGS +=/g' \
    -e 's/^CFLAGS = -g/#CFLAGS += -g/g' \
    -e 's/^LDFLAGS = -g/#LDFLAGS += -g/g' \
    -e 's/ -D_BSD_SOURCE/ -D_DEFAULT_SOURCE/'

  make X11INC=/usr/include/X11 X11LIB=/usr/lib/X11 FREETYPEINC=/usr/include/freetype2
}

package() {
  make -C $_pkgname PREFIX=/usr DESTDIR=$pkgdir install
  install -m644 -D $_pkgname/LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}

# vim:set ts=4 sts=2 sw=2 et:
