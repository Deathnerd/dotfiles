! cursortheme
Xcursor.theme: DMZ-White

! font settings
Xft.dpi:       96
Xft.autohint:  0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintfull
Xft.hinting:   1
Xft.antialias: 1
Xft.rgba:      rgb

urxvt*saveLines:         5000
urxvt*internalBorder:    0
urxvt*font:              xft:dejavu sans mono:normal:pixelsize=14
urxvt*boldFont:          xft:dejavu sans mono:normal:pixelsize=14
urxvt*letterSpace:       -1
urxvt*scrollBar:         false
urxvt*urgentOnBell:      true 
urxvt*scrollTtyOutput:   false
urxvt*scrollWithBuffer:  true
urxvt*scrollTtyKeypress: true
urxvt*loginShell:        true
urxvt*transparent:       false
!urxvt*shading:              30
!urxvt*tintColor:            #aaffaa
!urxvt*inheritPixmap:        true
!urxvt*depth:                32

! make clickable urls
urxvt*perl-lib:          /usr/lib/urxvt/perl/
urxvt*perl-ext-common:   default,matcher
urxvt*url-launcher:      vimb
urxvt*matcher.button:    1
urxvt*matcher.pattern.1: \\bwww\\.[\\w-]+\\.[\\w./?&@#-]*[\\w/-]
urxvt*colorUL:           #8f8

! set terminal colors
*cursorColor:  #dc74d1
*pointerColor: #dc74d1
*background:   #111111
*foreground:   #eeeeee
! black
*color0:       #333333
*color8:       #666666
! red
*color1:       #d15517
*color9:       #d11723
! green
*color2:       #36b217
*color10:      #00d56a
! yellow
*color3:       #d1b217
*color11:      #ffea55
! blue
*color4:       #55aaff
*color12:      #1793d1
! magenta
*color5:       #b217d1
*color13:      #d11793
! cyan
*color6:       #93d1b2
*color14:      #17d1b2
! white
*color7:       #aaaaaa
*color15:      #ffffff


! Scratch for mcabber
scratchy*transparent:       false
scratchy*saveLines:         5000
scratchy*internalBorder:    0
scratchy*font:              xft:dejavu sans mono:normal:pixelsize=14
scratchy*boldFont:          xft:dejavu sans mono:normal:pixelsize=14
scratchy*letterSpace:       -1
scratchy*scrollBar:         false
scratchy*urgentOnBell:      true 
scratchy*scrollTtyOutput:   false
scratchy*scrollWithBuffer:  true
scratchy*scrollTtyKeypress: true
scratchy*loginShell:        false
scratchy*cursorColor:       #dc74d1
scratchy*pointerColor:      #dc74d1
scratchy*background:        #000
