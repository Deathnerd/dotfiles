# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>
pkgname=tabbed-git
pkgver=0.5.9.g14beaab
pkgrel=1
pkgdesc="Simple generic tabbed fronted to xembed aware applications"
arch=('i686' 'x86_64')
url="http://tools.suckless.org/tabbed/"
license=('MIT/X')
depends=('libx11')
makedepends=('git')
provides=('tabbed')
conflicts=('tabbed')
source=('git+http://git.suckless.org/tabbed' 'config.h')
sha1sums=('SKIP'
          'f934cc527c2ea141a7caf1bbd8701263f9d14c3e')
_gitname="tabbed"

pkgver() {
  cd "$srcdir"/$_gitname
  git describe --tags | sed 's+[-_]+.+g'
}

build() {
  cd "$srcdir/$_gitname"
  cp "${srcdir}/config.h" config.h
  make PREFIX=/usr
}

package() {
  cd "$srcdir/$_gitname"
  make DESTDIR="$pkgdir/" PREFIX=/usr install
  install -Dm0644 LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE}
}
