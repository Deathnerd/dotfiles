background no
cpu_avg_samples 2
out_to_console yes
no_buffers yes
update_interval 2.0
total_run_times 0
use_spacer none

TEXT
C${cpu cpu1}:${cpu cpu2} M$memperc ${exec echo -e \\x04}\
${time %Y-%m-%d %H:%M}\
${if_match "${exec cat /sys/class/power_supply/BAT0/status}" == "Discharging"}\
${exec echo -e \\x03}${exec acpi | cut -d' ' -f5 | cut -d':' -f1,2}\
$endif 
