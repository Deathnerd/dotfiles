pkgname=vimb-git
_pkgname=vimb
pkgver=2.11.r89.g1904807
pkgrel=1
pkgdesc="Vimb is a WebKit-based web browser"
arch=('i686' 'x86_64')
url="http://fanglingsu.github.io/vimb"
license=('GPL3')
depends=('webkit2gtk')
source=('git+https://github.com/fanglingsu/vimb.git#branch=webkit2')
md5sums=('SKIP')

pkgver() {
	cd "$_pkgname"
    git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

prepare() {
    if [ -e $SRCDEST/config.h ]; then
        msg "using custom config.h";
        cp $SRCDEST/config.h "$_pkgname/src"
    fi
}

build() {
	cd "$_pkgname"
	make V=1 DESTDIR="$pkgdir" PREFIX="/usr"
}

package() {
	cd "$_pkgname"
	make V=1 DESTDIR="$pkgdir" PREFIX="/usr" install
    install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

